<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

        <TextView
            android:id="@+id/textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:text="@string/TextWidget"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_toStartOf="@+id/imgbtn"
            android:layout_alignParentStart="true"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview"
            android:text="@string/TextButton"/>

        <ImageButton
            android:id="@+id/imgbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textview"
            android:src="@drawable/flag"/>

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/imgbtn"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imgbtn"
            android:text="check this out"/>

        <Switch
            android:id="@+id/switch4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgbtn"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-1dp"
            android:layout_marginStart="2dp"
            android:layout_marginRight="0dp"
            android:layout_toEndOf="@+id/checkbox"
            android:text="switch on/off"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch4"
        android:text="Type your answer here" />
    </RelativeLayout>